<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.indoor_info.IndoorInfoActivity">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:umanoPanelHeight="180dp"
            sothree:umanoShadowHeight="6dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="MAP"
                android:textSize="16dp" />

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#fff">
            <View
                    android:layout_width="76dp"
                    android:layout_height="0.5dp"
                    android:background="#8b8b8b"
                    sothree:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7.5dp"
                    sothree:layout_constraintStart_toStartOf="parent"
                    sothree:layout_constraintEnd_toEndOf="parent"/>
            <View
                    android:layout_width="84dp"
                    android:layout_height="0.5dp"
                    android:background="#8b8b8b"
                    sothree:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12.5dp"
                    sothree:layout_constraintStart_toStartOf="parent"
                    sothree:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:id="@+id/tv_name_indoor_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8sp"
                    android:text="소프트웨어학과 사무실"
                    android:fontFamily="@font/notosanskrbold"
                    android:includeFontPadding="false"
                    android:layout_marginTop="31dp"
                    android:layout_marginStart="16dp"
                    sothree:layout_constraintTop_toTopOf="parent"
                    sothree:layout_constraintStart_toStartOf="parent"
            />
            <TextView
                    android:id="@+id/tv_position_indoor_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="#888888"
                    android:lineSpacingExtra="8sp"
                    android:text="전자관 4층"
                    android:fontFamily="@font/notosanskrregular"
                    android:includeFontPadding="false"
                    sothree:layout_constraintTop_toBottomOf="@id/tv_name_indoor_info"
                    sothree:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="17dp"
            />
            <TextView
                    android:id="@+id/tv_tag1_indoor_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:lineSpacingExtra="6sp"
                    android:text="사무실"
                    android:fontFamily="@font/notosanskrlight"
                    android:includeFontPadding="false"
                    sothree:layout_constraintTop_toBottomOf="@id/tv_position_indoor_info"
                    sothree:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_square_yellow"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
            />
            <TextView
                    android:id="@+id/tv_tag2_indoor_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:lineSpacingExtra="6sp"
                    android:text="소프트웨어학과"
                    android:fontFamily="@font/notosanskrlight"
                    android:includeFontPadding="false"
                    sothree:layout_constraintTop_toBottomOf="@id/tv_position_indoor_info"
                    sothree:layout_constraintStart_toEndOf="@id/tv_tag1_indoor_info"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_square_yellow"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
            />
            <TextView
                    android:id="@+id/tv_tag3_indoor_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#000"
                    android:lineSpacingExtra="6sp"
                    android:text="호호"
                    android:fontFamily="@font/notosanskrlight"
                    android:includeFontPadding="false"
                    sothree:layout_constraintTop_toBottomOf="@id/tv_position_indoor_info"
                    sothree:layout_constraintStart_toEndOf="@id/tv_tag2_indoor_info"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_square_yellow"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:lineSpacingExtra="8sp"
                    android:text="상세 정보"
                    android:fontFamily="@font/notosanskrmedium"
                    android:includeFontPadding="false"
                    sothree:layout_constraintTop_toBottomOf="@id/tv_tag1_indoor_info"
                    sothree:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="19dp"
                    android:layout_marginStart="16dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#888888"
                    android:lineSpacingExtra="8sp"
                    android:text="담당 업무 - 과블라블라블라, 욱엑욱엑, 웅앵웅\n영업 시간 - 09:00 ~ 17:00\n연락처 - 02) 300 - 1800"
                    android:fontFamily="@font/notosanskrregular"
                    android:includeFontPadding="false"
                    sothree:layout_constraintTop_toBottomOf="@id/tv_tag1_indoor_info"
                    sothree:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="16dp"
            />
        </android.support.constraint.ConstraintLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="47dp"
            sothree:layout_constraintStart_toStartOf="parent"
            sothree:layout_constraintEnd_toEndOf="parent"
            sothree:layout_constraintBottom_toBottomOf="parent"
            android:background="#fff"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/round_square_blue"
            sothree:layout_constraintStart_toStartOf="parent"
            sothree:layout_constraintEnd_toEndOf="parent"
            sothree:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:text="안내 시작"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="8sp"
            android:fontFamily="@font/notosanskrmedium"
            android:includeFontPadding="false"
            style="?android:attr/borderlessButtonStyle"
    />
</android.support.constraint.ConstraintLayout>