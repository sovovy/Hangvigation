<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.summary.SummaryActivity">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_top_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="17dp">
        <TextView
                android:id="@+id/tv_title_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="9sp"
                tools:text="강의동까지"
                android:fontFamily="@font/notosanskrbold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="11dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:text="소요 시간"
                android:fontFamily="@font/notosanskrlight"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_summary"
                android:layout_marginTop="22dp"
        />
        <TextView
                android:id="@+id/tv_time_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                tools:text="3분"
                android:fontFamily="@font/notosanskrregular"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="132dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_summary"
                android:layout_marginTop="22dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:text="거리"
                android:fontFamily="@font/notosanskrlight"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_time_summary"
                android:layout_marginTop="22dp"
        />
        <TextView
                android:id="@+id/tv_distance_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                tools:text="120m"
                android:fontFamily="@font/notosanskrregular"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="132dp"
                app:layout_constraintTop_toBottomOf="@id/tv_time_summary"
                android:layout_marginTop="22dp"
        />
        <Button
                android:id="@+id/btn_start_summary"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/round_square_yellow"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_distance_summary"
                android:layout_marginTop="22dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:lineSpacingExtra="9sp"
                android:text="안내 시작"
                android:fontFamily="@font/notosanskrmedium"
                android:includeFontPadding="false"/>
    </android.support.constraint.ConstraintLayout>
    <RelativeLayout
            android:id="@+id/map_view_summary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_top_summary"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>