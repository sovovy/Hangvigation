<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".ui.main.MainActivity">

    <RelativeLayout
            android:id="@+id/map_view_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </RelativeLayout>

    <View
        android:id="@+id/view_top_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_second_main"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="9sp"
        android:text="항비게이션"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanskrbold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_top_main"
        app:layout_constraintBottom_toBottomOf="@id/view_top_main"
    />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/settings"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_top_main"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_main"
    />

    <ImageView
        android:id="@+id/iv_search_main"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/search"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@+id/view_top_main"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_main"
        app:layout_constraintEnd_toEndOf="parent"
    />



    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_second_main"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/view_top_main">

        <Button
            android:id="@+id/btn_first_main"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:background="@drawable/round_square_yellow"
            android:textSize="16dp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            android:text="강의실"
            android:fontFamily="@font/notosanskrmedium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@id/cl_second_main"
            app:layout_constraintEnd_toStartOf="@+id/btn_second_main"
            app:layout_constraintTop_toTopOf="@id/cl_second_main"
            app:layout_constraintBottom_toBottomOf="@id/cl_second_main"
        />

        <Button
            android:id="@+id/btn_second_main"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:background="@drawable/round_square_yellow"
            android:textSize="16dp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            android:text="편의시설"
            android:fontFamily="@font/notosanskrmedium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/btn_first_main"
            app:layout_constraintEnd_toStartOf="@+id/btn_third_main"
            app:layout_constraintTop_toTopOf="@+id/cl_second_main"
            app:layout_constraintBottom_toBottomOf="@+id/cl_second_main"
        />

        <Button
            android:id="@+id/btn_third_main"
            android:layout_width="104dp"
            android:layout_height="30dp"
            android:background="@drawable/round_square_yellow"
            android:textSize="16dp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            android:text="연구∙사무실"
            android:fontFamily="@font/notosanskrmedium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/btn_second_main"
            app:layout_constraintEnd_toStartOf="@+id/btn_fourth_main"
            app:layout_constraintTop_toTopOf="@+id/cl_second_main"
            app:layout_constraintBottom_toBottomOf="@+id/cl_second_main"
        />

        <Button
            android:id="@+id/btn_fourth_main"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:background="@drawable/round_square_yellow"
            android:textSize="16dp"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            android:text="그 외"
            android:fontFamily="@font/notosanskrmedium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/btn_third_main"
            app:layout_constraintTop_toTopOf="@+id/cl_second_main"
            app:layout_constraintBottom_toBottomOf="@+id/cl_second_main"
            app:layout_constraintEnd_toEndOf="@+id/cl_second_main"
        />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_search_main"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
    >

        <View
                android:id="@+id/view_top_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
        />

        <EditText
                android:id="@+id/et_bar_search"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@+id/view_top_search"
                app:layout_constraintBottom_toBottomOf="@+id/view_top_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_cancel_search"
                android:layout_marginStart="16dp"
                android:background="@drawable/round_square_yellow"
                android:backgroundTint="#ffffff"
                android:textSize="15dp"
                android:textColorHint="#9a9a9a"
                android:lineSpacingExtra="7sp"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:hint="장소를 검색해보세요"
        />

        <ImageView
                android:id="@+id/iv_cancel_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cancel"
                app:layout_constraintStart_toEndOf="@+id/et_bar_search"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="@+id/view_top_search"
                app:layout_constraintBottom_toBottomOf="@+id/view_top_search"
        />

        <View
                android:id="@+id/view_bottom_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view_top_search"
                android:background="#cb000000"
        />

        <TextView
                android:id="@+id/tv_recent_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="9sp"
                android:fontFamily="@font/notosanskrmedium"
                android:text="최근 검색"
                android:includeFontPadding="false"
                app:layout_constraintTop_toTopOf="@+id/view_bottom_search"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="16dp"
        />

        <TextView
                android:id="@+id/tv_recent1_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskrlight"
                android:text="소프트웨어학과"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent_search"
                android:layout_marginTop="19dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="39dp"
        />

        <TextView
                android:id="@+id/tv_recent2_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskrlight"
                android:text="소프트웨어학과"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent1_search"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="39dp"
        />

        <TextView
                android:id="@+id/tv_recent3_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskrlight"
                android:text="소프트웨어학과"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent2_search"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="39dp"
        />

        <TextView
                android:id="@+id/tv_recent4_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskrlight"
                android:text="소프트웨어학과"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent3_search"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="39dp"
        />


        <TextView
                android:id="@+id/tv_hot_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="9sp"
                android:fontFamily="@font/notosanskrmedium"
                android:text="추천 검색어"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent4_search"
                android:layout_marginTop="42dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="16dp"
        />

        <TextView
                android:id="@+id/tv_hot1_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskrlight"
                android:text="메이커스페이스"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_hot_search"
                android:layout_marginTop="19dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="39dp"
        />

        <TextView
                android:id="@+id/tv_hot2_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskrlight"
                android:text="전산실"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_hot1_search"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="39dp"
        />

        <TextView
                android:id="@+id/tv_hot3_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskrlight"
                android:text="소프트웨어학과"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_hot2_search"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="39dp"
        />

        <TextView
                android:id="@+id/tv_hot4_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:fontFamily="@font/notosanskrlight"
                android:text="편의점"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_hot3_search"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@+id/view_bottom_search"
                android:layout_marginStart="39dp"
        />
    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/btn_location_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mlocation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
            android:id="@+id/btn_school_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/school_location"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_location_main"/>


    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_summary_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="17dp"
            android:visibility="gone">
        <TextView
                android:id="@+id/tv_title_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="9sp"
                tools:text="강의동까지"
                android:fontFamily="@font/notosanskrbold"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="11dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:text="소요 시간"
                android:fontFamily="@font/notosanskrlight"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_summary"
                android:layout_marginTop="22dp"
        />
        <TextView
                android:id="@+id/tv_time_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                tools:text="3분"
                android:fontFamily="@font/notosanskrregular"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="132dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_summary"
                android:layout_marginTop="22dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                android:text="거리"
                android:fontFamily="@font/notosanskrlight"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_time_summary"
                android:layout_marginTop="22dp"
        />
        <TextView
                android:id="@+id/tv_distance_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="8sp"
                tools:text="120m"
                android:fontFamily="@font/notosanskrregular"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="132dp"
                app:layout_constraintTop_toBottomOf="@id/tv_time_summary"
                android:layout_marginTop="22dp"
        />
        <Button
                android:id="@+id/btn_start_summary"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/round_square_yellow"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_distance_summary"
                android:layout_marginTop="22dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:lineSpacingExtra="9sp"
                android:text="안내 시작"
                android:fontFamily="@font/notosanskrmedium"
                android:includeFontPadding="false"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>